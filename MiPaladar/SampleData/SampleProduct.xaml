                <ent:Category Name="Sample Category"/>
            </viewmodels:ProductIndexViewModel.Category>
        </viewmodels:ProductIndexViewModel>
    </local:SampleProduct.RelatedCategories>

    <local:SampleProduct.Ingredients>
        <viewmodels:IngredientViewModel Quantity="1">
            <viewmodels:IngredientViewModel.Product>
                <ent:Product Name="Filete de pescado" />
            </viewmodels:IngredientViewModel.Product>
            <viewmodels:IngredientViewModel.UnitMeasure>
                <ent:UnitMeasure Caption="u"/>
            </viewmodels:IngredientViewModel.UnitMeasure>
        </viewmodels:IngredientViewModel>
        <viewmodels:IngredientViewModel Quantity="0.5">
            <viewmodels:IngredientViewModel.Product>
                <ent:Product Name="copa de vino" />
