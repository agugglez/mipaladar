<local:SampleProduct xmlns:viewmodels="clr-namespace:MiPaladar.ViewModels"
                    xmlns:local="clr-namespace:MiPaladar.SampleData" 
                    xmlns:ent="clr-namespace:MiPaladar.Entities;assembly=DataLayer"
                    xmlns:classes="clr-namespace:MiPaladar.Classes"
                             
                    IsRecipe="True" IsStorable="True" IsPurchasable="True" NotInMenu="True" 
                    IsProduced="False" IsEntrant="True" HasDifferentFormats="False"
                    Name="Sample Product Name" SalePrice="3.5" PriceRate="1.75">
    
    <local:SampleProduct.ProductionArea>
        <ent:ProductionArea Name="Area de Producción"/>
    </local:SampleProduct.ProductionArea>

    <local:SampleProduct.RelatedCategories>
        <viewmodels:ProductIndexViewModel IsMain="True">
            <viewmodels:ProductIndexViewModel.Category>
                <ent:Category Name="Plato Fuerte"/>
            </viewmodels:ProductIndexViewModel.Category>
        </viewmodels:ProductIndexViewModel>
        <viewmodels:ProductIndexViewModel >
            <viewmodels:ProductIndexViewModel.Category>
                <ent:Category Name="Pescado"/>
            </viewmodels:ProductIndexViewModel.Category>
        </viewmodels:ProductIndexViewModel>
        <viewmodels:ProductIndexViewModel >
