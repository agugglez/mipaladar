            <Button Content="{Binding LoggedInUser.Name,StringFormat=HOLA {0}}"
                    IsEnabled="False"
                    Style="{StaticResource SystemButtonLink}" />

            <Line X1=".5" Y1="3" X2=".5" Y2="12" Margin="7,0,5,0" 
