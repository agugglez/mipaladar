                            <toolkit:AutoCompleteBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </toolkit:AutoCompleteBox.ItemTemplate>
                        </toolkit:AutoCompleteBox>-->
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Source={StaticResource allTagsCVS}}" 
