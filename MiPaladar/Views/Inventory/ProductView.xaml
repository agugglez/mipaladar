                <MultiBinding Converter="{StaticResource logicExptvConverter}"
                                      ConverterParameter="v1ov2">
                    <Binding Path="Creating"/>
                    <Binding Path="Editing"/>
                </MultiBinding>
            </Button.Visibility>
